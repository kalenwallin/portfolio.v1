<header>
    <div class="modal-header slide-in-from-bottom">
        <h1>Work Experience</h1>
    </div>

</header>
<body>
    <div>
        <div class="row slide-in-from-bottom-light">
            <div class="column to-slide-bottom-light animate">
                <div class="card" onclick="document.getElementById('id01').style.display='block'">
                    <div class="img-container">
                        <img src=@AppData.GetImageLink("farmafield.png") alt="FarmAfield internship graphic">
                    </div>
                    <div class="container">
                        <h4><b>FarmAfield</b></h4>
                        <p>FarmAfield</p>
                    </div>
                </div>
            </div>
            <div class="column to-slide-bottom-light animate">
                <div class="card" onclick="document.getElementById('id05').style.display='block'">
                    <div class="img-container">
                        <img src=@AppData.GetImageLink("unl_ta.png") alt="University of Nebraska-Lincoln Software Engineering Teaching Assistant graphic">
                    </div>
                    <div class="container">
                        <h4><b>University of Nebraska-Lincoln</b></h4>
                        <p>Software Engineering Teaching Assistant</p>
                    </div>
                </div>
            </div>
            <div class="column to-slide-bottom-light animate">
                <div class="card" onclick="document.getElementById('id03').style.display='block'">
                    <div class="img-container">
                        <img src=@AppData.GetImageLink("wallin_farms.png") alt="Wallin Farms Logo">
                    </div>
                    <div class="container">
                        <h4><b>Wallin Farms</b></h4>
                        <p>Farmhand & Office</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row slide-in-from-bottom-light">
            <div class="column to-slide-bottom-light animate">
                <div class="card" onclick="document.getElementById('id02').style.display='block'">
                    <div class="img-container">
                        <img src=@AppData.GetImageLink("initialize.png") alt="Initialize UNL Logo White">
                    </div>
                    <div class="container">
                        <h4><b>Initialize</b></h4>
                        <p>Curriculum Developer</p>
                    </div>
                </div>
            </div>
            <div class="column to-slide-bottom-light animate">
                <div class="card" onclick="document.getElementById('id04').style.display='block'">
                    <div class="img-container">
                        <img src=@AppData.GetImageLink("imperial_pool.png") alt="Imperial Pool Logo">
                    </div>
                    <div class="container">
                        <h4><b>Imperial Pool</b></h4>
                        <p>Lifeguard</p>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
</body>

<div id="id01" class="modal" onclick="document.getElementById('id01').style.display='none'">
    <form class="modal-content notion animate">
        <div class="fappy_container">
            <iframe loading="lazy" src="https://v3.kalenwallin.com/farmafield" style="width: 100%; height: 95%;" />
            <button class="btn-block" type="button" onclick="document.getElementById('id01').style.display='none'">Done</button>
        </div>
    </form>
</div>

<div id="id02" class="modal" onclick="document.getElementById('id02').style.display='none'">
    <form class="modal-content animate">
        <div class="fappy_container">
            <h1 class="text-center">Initialize <br /> Curriculum Developer</h1>
            <hr />
            <p>
                <b>January 2020 - May 2020</b>
                <br /><br />
                Kalen worked with a small team of students to develop computer science curriclum
                intended to be used in workshops for students in rural areas.
                <br /><br />
                His team was a part of the UNL Initialize Club.
            </p>
            <button class="btn-block" type="button" onclick="document.getElementById('id02').style.display='none'">Done</button>
        </div>
    </form>
</div>

