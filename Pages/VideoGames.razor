@page "/videogames"
@inject Services.AppData AppData;

<header>
    <div class="modal-header slide-in-from-bottom">
        <h1>Video Games</h1>
    </div>

</header>
<body>
    <div>
        <div class="row slide-in-from-bottom-light">
            <div class="column to-slide-bottom-light animate">
                <div class="card" onclick="document.getElementById('id03').style.display='block'">
                    <div class="img-container">
                        <img src=@AppData.GetImageLink("baldorf.png") alt="baldorf graphic">
                    </div>
                    <div class="container">
                        <h4><b>baldorf</b></h4>
                        <p>Unity Game Developer</p>
                    </div>
                </div>
            </div>
            <div class="column to-slide-bottom-light animate">
                <div class="card" onclick="document.getElementById('id04').style.display='block'">
                    <div class="img-container">
                        <img src=@AppData.GetImageLink("godot_demo.png") alt="godot demo graphic">
                    </div>
                    <div class="container">
                        <h4><b>Godot Demo</b></h4>
                        <p>Godot Game Developer</p>
                    </div>
                </div>
            </div>
            <div class="column to-slide-bottom-light animate">
                <div class="card" onclick="document.getElementById('id02').style.display='block'">
                    <div class="img-container">
                        <img src=@AppData.GetImageLink("minieval.png") alt="Minieval Logo">
                    </div>
                    <div class="container">
                        <h4><b>Minieval</b></h4>
                        <p>Godot Game Developer</p>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
</body>

<!-- The Modal -->
<div id="id02" class="modal" onclick="document.getElementById('id02').style.display='none'">
    <form class="modal-content notion animate">
        <div class="fappy_container">
            <iframe loading="lazy" src="https://v3.kalenwallin.com/minieval" style="width: 100%; height: 95%;" />
            <button class="btn-block" type="button" onclick="document.getElementById('id04').style.display='none'">Done</button>
        </div>
    </form>
</div>

<div id="id03" class="modal" onclick="document.getElementById('id03').style.display='none'">
    <form class="modal-content notion animate">
        <div class="fappy_container">
            <iframe loading="lazy" src="https://v3.kalenwallin.com/baldorf" style="width: 100%; height: 95%;" />
            <button class="btn-block" type="button" onclick="document.getElementById('id03').style.display='none'">Done</button>
        </div>
    </form>
</div>

<div id="id04" class="modal" onclick="document.getElementById('id04').style.display='none'">
    <form class="modal-content notion animate">
        <div class="fappy_container">
            <iframe loading="lazy" src="https://v3.kalenwallin.com/godot-game-level-demo" style="width: 100%; height: 95%;" />
            <button class="btn-block" type="button" onclick="document.getElementById('id04').style.display='none'">Done</button>
        </div>
    </form>
</div>